<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bluetooth</name>
    <description>
        A bluetoothle application.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Boyed Lee.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-bluetoothle" source="npm" />
    <plugin name="cordova-plugin-flashlight" source="npm" />
    <plugin name="cordova-plugin-battery-status" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <perference name="SplashScreen" value="res/android/drawable-port-hdpi/screen.png"/>
    <!-- <perference name="AutoHideSplashScreen" value="false"/>
    <perference name="FadeSplashScreen" value="false"/> -->
    <perference name="SplashScreenDelay" value="4000"/>
    <preference name="FadeSplashScreenDuration" value="1000"/>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
